in vec4 v_color;
in vec2 v_texCoord;

uniform sampler2D f_texture;

void main(){
  vec4 fragColor = texture2D(f_texture, v_texCoord);
  float average = 0;

  average = fragColor.r * 0.299 + fragColor.g * 0.587 + fragColor.b * 0.114;

  // Uncomment to enable BW or Passthrough

  // Black and White
  gl_FragColor = vec4(average, average, average, fragColor.a);
}