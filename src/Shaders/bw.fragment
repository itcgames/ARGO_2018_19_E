in vec4 v_color;
in vec2 v_texCoord;

uniform sampler2D f_texture;

void main(){
	vec4 fragColor = texture2D(f_texture, v_texCoord);
	float average = 0.2126 * fragColor.r + 0.7152 * fragColor.g + 0.0722 * fragColor.b;

	// Uncomment to enable Black and White OR Passthrough

	// Black and White
	gl_FragColor = vec4(average, average, average, 1.0);

	// Pass through
	//gl_FragColor = texture2D(f_texture, v_texCoord);
}